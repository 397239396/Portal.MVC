    <script> 

        //修改左侧菜单栏样式
        function changemenucss(menuItem) {
            $('ul.menuul').children(menuItem).addClass('menu-active');
        }

        window.onload = function () {
            var pathname = location.pathname.substr(1);
            var token;
            if (pathname == "") {
                token = "Home";
            } else {
                var patt = new RegExp("[a-z]{1,}", "i");//匹配控制器
                token = patt.exec(pathname)[0];
            }
            switch (token) {
                case "Example":
                    changenavcss(".example");
                    break;
                case "Download":
                    changenavcss(".download");
                    break;
                case "Product":
                    changenavcss(".product");
                    break;
                case "SoftPurchase":
                    changenavcss(".soft");
                    break;
                case "Ask":
                    changenavcss(".train");
                    break;
                case "Topic":
                    changenavcss(".forum");
                    break;
                case "About":
                    changenavcss(".about");
                    break;
                case "Home":
                    changenavcss(".home");
                    break;
                case "User":
                    var pattaction = new RegExp("[a-z]{1,}", "i");//匹配Action
                    var actionname = pattaction.exec(pathname.substr(pathname.indexOf("/") + 1))[0];
                    switch (actionname) {
                        case "CollectExamples":
                            changemenucss('#collectexamples'); break;
                        case "SetPassword":
                        case"SetPasswordResult":
                            changemenucss('#setpassword');
                            break;
                        case "MyTopic":
                            changemenucss('#mytopic');
                            break;
                        case "MyQuestion":
                            changemenucss('#myquestion');
                            break;
                        default:
                            changemenucss('#index');
                            break;
                    }
                    break;
            }
        }
    </script>
