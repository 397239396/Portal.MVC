    <script>
      
       
        //修改顶部导航栏样式
        function changenavcss(navItem) {
            $(".header-nav").children(navItem).addClass("nav-active");
            $(".header-nav").children(navItem).children("a").css("color", "#57b382");
        }

      
        //给导航栏栏目添加下拉列表，当鼠标放在栏目上面时显示出来。
        $(".header-nav li").bind("mouseenter", function () {
            //显示列表
            $(this).children("ul").show();
        }).bind("mouseleave", function () {
            //隐藏列表
            $(this).children("ul").hide();
        });

        //返回页面顶部
        $("#backTop").bind("mouseenter", function () {
            $(this).find("div").show();
        }).bind("mouseleave", function () {
            $(this).find("div").hide();
        }).bind("click", function () {
            $("body").animate({ 'scrollTop': 0 }, 100);
        });

        $(window).scroll(function () {
            if ($("body").scrollTop()==0) {
                $("#backTop").hide();
            } else {
                $("#backTop").show();
            }
            
        });
    </script>
