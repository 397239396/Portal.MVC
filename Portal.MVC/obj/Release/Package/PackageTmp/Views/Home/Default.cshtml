@using ThankNet.Controllers
@model ThankNet.Models.PageUnit

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta content="餐饮软件，点餐宝，点餐系统" name="keywords" />
    <meta content="尚可思贸易有限公司" name="description" />
    <title>尚可思贸易有限公司</title>
    <link href="~/Content/CSS/bootstrap.css" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/bootstrap-responsive.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/styles-responsive.css" />
    <script src="~/Content/Js/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/js/bootstrap.min.js"></script>
    <link href="~/Content/CSS/default.css" rel="stylesheet" />

</head>
<body>

    <nav class=" navbar  navbar-fixed-top ">
        <div class="subnav-wrap">
            <div class="subnav-logo ">
                <div class="subnav-logo-img">
                    <img  class="" src="@BaseController.GetLogoUrl()" alt="" />
                </div>
            </div>
            <ul class="subnav-link ">
                <li class="hover">
                    <a href="#page1">@Model.PageOne.NavTitle</a>
                </li>
                <li>
                    <a href="#page2">@Model.PageTwo.NavTitle</a>
                </li>
                <li>
                    <a href="#page3">@Model.PageThree.NavTitle</a>
                </li>
                <li>
                    <a href="#page4">@Model.PageFour.NavTitle</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Home")">首页</a>
                </li>
                <li>
                    <a href="@Url.Action("ProudctIndex", "Product")">更多产品</a>
                </li>
                <li>
                    <a href="@Url.Action("CaseIndex", "Example")">更多案例</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="body">
        <div class="row-fluid bkwhite">
            <div id="page1" class="page">
                <div class="row-fluid">
                    <div class="span6">
                        <div class="video-img ">
                            <img src="@Model.PageOne.ImgUrl" alt="" class="animate" style="margin-left: 0px" />
                        </div>
                    </div>
                    <div class="span6 ">
                        <div class="video-desc">
                            <h1>@Model.PageOne.MainTitle</h1>
                            <h2>@Model.PageOne.ChildTitle</h2>
                            <p>@Model.PageOne.Content</p>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div class="row-fluid bkblack">
            <div id="page2" class="page">
                <div class="row-fluid">
                    <div class="screen-desc">
                        <h1>@Model.PageTwo.MainTitle</h1>
                        <p>@Model.PageTwo.Content</p>
                        @*<p>它的 NTSC 色域达到了 85%，对比度达到了 1100:1，亮度达到了 500cd/m²。三项参数的同时提升，不仅是我们的第一次，也是业界的第一次。</p>*@
                        @*<p>如此，照片更加鲜艳欲滴，文字更加锐利清澈。将 MX4 握在手中时，美好的内容仿佛要跃然屏外，让你忍不住沉浸其中。</p>*@
                        <div class="screen-features">
                            <div class="row">
                                <div class="span4">
                                    <div class="screen-feature">
                                        <h2>@Model.PageTwo.FeatureH1</h2>
                                        <p>@Model.PageTwo.FeatureDes1</p>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="screen-feature">
                                        <h2>@Model.PageTwo.FeatureH2</h2>
                                        <p>@Model.PageTwo.FeatureDes2</p>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="screen-feature">
                                        <h2>@Model.PageTwo.FeatureH3</h2>
                                        <p>@Model.PageTwo.FeatureDes3</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <img src="@Model.PageTwo.ImgUrl" id="overimg" class="" alt="" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid bkwhite">
            <div id="page3" class="page">
                <div class="row-fluid">
                    <div class="camera-desc ">
                        <h1>@Model.PageThree.MainTitle</h1>
                        <h2>@Model.PageThree.ChildTitle</h2>
                        <p>@Model.PageThree.Content</p>
                    </div>
                    <div class="camera-img">
                        <img src="@Model.PageThree.ImgUrl" alt="" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid bkblack">
            <div id="page4" class="page">
                <div class="row-fluid">
                    <div class="span6" style="padding-top: 100px;">
                            <h1>@Model.PageFour.MainTitle</h1>
                            <p>@Model.PageFour.Content</p>
                        <div class="network-features">
                            <div class="row-fluid">
                                <div class="span4">
                                    <div class="network-feature">
                                        <h2>@Model.PageFour.FeatureH1</h2>
                                        <p>@Model.PageFour.FeatureDes1</p>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="network-feature">
                                        <h2>@Model.PageFour.FeatureH2</h2>
                                        <p>@Model.PageFour.FeatureDes2</p>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="network-feature">
                                        <h2>@Model.PageFour.FeatureH3</h2>
                                        <p>@Model.PageFour.FeatureDes3</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span6 network-img">
                        <img src="@Model.PageFour.ImgUrl" id="surp" alt="" />
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <div class="copyright">
                &copy; Copyright &copy; 2014-2018 尚可思.By <a style="" href="http://www.cnblogs.com/stoneniqiu/">stoneniqiu</a> rights reserved.  &nbsp;&nbsp;&nbsp; 京ICP备14049936号
            </div>
        </footer>
        <div class="toTop" style="display: block;">
            <img src="http://www2.res.meizu.com/zh_cn/images/www/top.png" alt="返回顶部">
        </div>
    </div>
    <script>
        $('.toTop').click(function (event) {
            event.preventDefault();
            $('html, body').animate({ scrollTop: 0 }, 500);
        });

         // displaytopspan();
        function displaytopspan() {
            if ($(this).scrollTop() > 50) {
                $('.toTop').fadeIn(100);
            } else {
                $('.toTop').fadeOut(100);
            }
        }

    </script>
    <script type="text/javascript"> var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://"); document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F9127641dcd8807b8bf426088e97a600b' type='text/javascript'%3E%3C/script%3E")) </script>

</body>
</html>
