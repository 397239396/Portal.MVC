@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
@model ThankNet.ViewModel.AboutModel

<div class="aboutus">
    <div class="littlenav">
        <div class="titcon">
            <div class="litone">
                <h1>@Model.Introduce.TitleTop</h1>
                <p>@Model.Introduce.TitleTopSmall</p>
            </div>
            <div class="littwo">
                <p>@Model.Introduce.TitleCenter1</p>
                <p>@Model.Introduce.TitleCenter2</p>
            </div>
            <ul class="litthr">
                <li>
                    <p><img src="@Model.Introduce.Tag1" alt="2013年成立" title="2013年成立"></p>
                    <p class="det">
                        @Model.Introduce.Tag1Des
                    </p>
                </li>
                <li>
                    <p><img src="@Model.Introduce.Tag2" alt="合作商家超过100万" title="合作商家超过100万"></p>
                    <p class="det">
                        @Model.Introduce.Tag2Des
                    </p>
                </li>
                <li>
                    <p><img src="@Model.Introduce.Tag3" alt="300家企业中最紧密" title="300家企业中最紧密"></p>
                    <p class="det">
                        @Model.Introduce.Tag3Des
                    </p>
                </li>
                <li>
                    <p><img src="@Model.Introduce.Tag4" alt="超过4.5亿用户群体" title="超过4.5亿用户群体"></p>
                    <p class="det">
                        @Model.Introduce.Tag4Des
                    </p>
                </li>
                <li>
                    <p><img src="@Model.Introduce.Tag5" alt="16家银行战略合作" title="16家银行战略合作"></p>
                    <p class="det">
                        @Model.Introduce.Tag5Des
                    </p>
                </li>
            </ul>
        </div>
    </div>

    <div class="content">

        <div class="abcon1">
            <div class="tit">
                @Model.Introduce.Title2
            </div>
            <div class="cotain">
                <div class="words">
                    <strong>@Model.Introduce.StrongWrod</strong>
                    @Html.Raw(Model.Introduce.Brife)
                </div>
                <p class="words2"><img src="@Model.Introduce.ImgUrl" alt="董事长余晨"  ></p>
            </div>
        </div>
        <a name="maod"></a>
        <p class="forlineab"></p>
        <div class="abcon2">
            <div class="abcon3"></div>
            <div class="tit">
                发展历程
            </div>
            <div class="cotain"  >
                <ul class="ableft">
                    @foreach (var h in Model.Lefts)
                    {
                        <li><p>@h.Title<span class="time">@h.Time</span></p></li>
                    }
                </ul>
                <ul class="abright">
                    @foreach (var h in Model.Rights)
                    {
                        <li><p><span class="time">@h.Time</span>@h.Title</p></li>
                    }
                </ul>
          
            </div>
        </div>

    </div>
</div>
<input type="hidden" id="totle" value="@ViewBag.Total" />

<script>

    $(function () {
        $(".runline a").removeClass("active");
        $(".line5 a").addClass("active");
        $(".undline").css("left", "460px");
        $(".undline").css("width", "100px");

        var hight = $("#totle").val() * 70;
        $(".abcon3").css("height", hight + "px");

    })
</script>