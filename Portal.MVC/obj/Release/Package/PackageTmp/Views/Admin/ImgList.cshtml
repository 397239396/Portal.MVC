@model IEnumerable<ThankNet.Models.HomeImg>

<table id="imgtable" class="table table-striped table-bordered table-hover">
    <tr>
        <th class="center">
            <label>
                <input type="checkbox" id="checkAll" class="ace" />
                <span class="lbl"></span>
            </label>
        </th>
        <th>图片
        </th>
        <th>放到首页
        </th>

        <th>更新时间
        </th>
    </tr>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td class="center">
                <label>
                    <input type="checkbox" data-id="@item.Id" class="ace"  />
                    <span class="lbl"></span>
                </label>
            </td>
            <td>
                <img src="@item.Url" alt="首页图片" />
            </td>
            <td  class="sethome">
                 <label>
                    <input type="checkbox"  data-id="@item.Id" checked="@item.IsShow"  class="ace" />
                    <span class="lbl"></span>
                </label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifyTime)
            </td>
        </tr>
    }
        </tbody>
</table>