
@model ThankNet.ViewModel.SumUp

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="alert alert-block alert-success">
    <button type="button" class="close" data-dismiss="alert">
        <i class="icon-remove"></i>
    </button>

    <i class="icon-ok green"></i>
     欢迎来到
	 <strong class="green">北京尚可思互联科技管理平台
     <small>(v1.0)</small>
     </strong>
</div>

<div class="row">
    <div class="space-6"></div>
    
    <div class="infobox infobox-green  ">
        <div class="infobox-content">产品总数:</div>
        <span class="infobox-data-number">@Model.TotalProducts</span>
    </div>
    
    <div class="infobox infobox-green  ">
        <div class="infobox-content">案例总数:</div>
        <span class="infobox-data-number">@Model.TotalCases</span>
    </div>
    
    <div class="infobox infobox-green  ">
        <div class="infobox-content">用户总数:</div>
        <span class="infobox-data-number">@Model.TotalUsers</span>
    </div>
    
    <div class="infobox infobox-green  ">
        <div class="infobox-content">订单总数:</div>
        <span class="infobox-data-number">@Model.TotalOrders</span>
    </div>


      </div>
