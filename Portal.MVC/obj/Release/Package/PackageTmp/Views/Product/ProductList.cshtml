@model IEnumerable<ThankNet.Models.Product>
<style>
    h6 a{color: gray}
</style>
<ul>
    @foreach (var p in Model)
    {
        <li>
            <div class="temp_news">
                <a href="@Url.Action("Details","Product",new {productId=p.Id})">
                <img src="@p.ImgUrl" alt="emptyimg" />
                    </a>
            </div>
            <div class="detail_news">
                <h6><a href="@Url.Action("Details","Product",new {productId=p.Id})">@p.ProductName 
                    </a></h6>
                <p class=" " style="padding-right: 10px;">
                   @p.Introduce
                </p>
                <span class="datepost">
                    <img src="@p.ImgUrl" class="locality" />
                    @p.Category</span><span class="morelink"><a href="@Url.Action("Details","Product",new {productId=p.Id})">more</a></span>
            </div>
            <div class="clearfix"></div>
        </li>
    }
</ul>
