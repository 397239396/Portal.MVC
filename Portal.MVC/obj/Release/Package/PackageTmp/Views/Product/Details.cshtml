@model ThankNet.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .imgbox img {
        width: 150px;height: 150px;
    }
    .imgbox{text-align: center;}     .imgbox h6 a{color: gray}
</style>
 
<!-- banner-->
<div class="banner">
</div>

<div class="row">

    <div class="breadcrumbline"></div>

    <div class="span12">
        <div class="inner">
            <div class="alignleft span4 "><h2></h2><br /><img src="@Model.ImgUrl" /></div>            <div class="span7">
                <h3> @Model.ProductName</h3> <br />                <div class="heading_border"></div>
                <p><small>更新时间：@Model.ModifyTime</small> </p>
                <p>
                    @Html.Raw(Model.Introduce)
                </p>
                <p><small>访问次数：@Model.VisitCount</small></p>
            </div>          
        </div>
    </div>
    <div class="span12">
         <div class="inner">
        <h3>其他产品</h3> <br />        <div class="heading_border"></div>
        <div class="carousel_box" style="position: relative;padding: 10px;padding-right: 20px;">
            @Html.Action("SlidProductList")
        </div>
        </div>
       
    </div>   

</div>
<script>
    $(function() {
        $(".nav-collapse .nav li:eq(2)").addClass("active");
        $(".nav-collapse .nav li:eq(2)").siblings().removeClass("active");
        
        $('.carousel_box').flexslider({
            animation: "slide",
            controlNav: true,
            directionNav: false,
            slideshowSpeed: 10000
        });
    })
</script>