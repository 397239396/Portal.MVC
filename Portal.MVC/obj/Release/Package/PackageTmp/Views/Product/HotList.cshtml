@model IEnumerable<ThankNet.Models.Product>

<style>
    .mul li a{color: gray}   .mul li a:hover{color: black}
      .mul li{list-style: none;border-bottom: gainsboro dotted 1px;}
</style>

<ul class="nav nav-list nav-listli mul" style="margin-bottom: 20px;">
   @foreach (var p in Model)
   {
        <li><a href="@Url.Action("Details","Product",new {productId=p.Id})">@p.ProductName</a></li>
   }
</ul>
