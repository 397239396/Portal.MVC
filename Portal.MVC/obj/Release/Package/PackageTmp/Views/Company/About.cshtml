@model ThankNet.ViewModel.CompanyView
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    article {
        letter-spacing: 0.2em;
        line-height: 25px;
        color: gray;
        font-family: 微软正黑体,微软雅黑,宋体;
        font-size: small;
    }
</style>
<div class="banner">
    <span>Thanksst<small>Inception About us </small></span>
</div>

<div class="row">

    <div class="breadcrumbline"></div>

    <div class="inner">
        <div class="span12">
            <div class="span7 ">
                    
                @*   <h2 style="margin-bottom: 20px;">
                <img class=" " src="@Model.Company.LogoUrl" style="height: 80px" alt="" />
            </h2>*@
                <h2 style="margin-bottom: 20px;">北京尚可思贸易有限公司</h2>
                <div class="alignleft span4"><a href="#" class="zoom img">
                                                 <img src="@Model.Company.ImgUrl" alt="" /></a></div>
                <article>
                    @Html.Raw(Model.Company.Introduce)
                </article>
            </div>
            <!-- /span6 -->

            <div class="span4  " >
                <h4 class="thankstitle">成功案例</h4>
                @*<div class="heading_border"></div>*@
                @Html.Action("HotList","Example")
                <h4 class="thankstitle">热门产品</h4>
                @*<div class="heading_border"></div>*@
                @Html.Action("HotList","Product")
                <h4 class="thankstitle">联系我们</h4>
                @*<div class="heading_border"></div>*@
                <ul class="listcontact">
                    <li class="cont-phone">
                        @Model.Company.PhoneNumber 
                    </li>
                    <li class="cont-email"><a href="mailto:@Model.Company.Email">@Model.Company.Email</a></li>
                    <li class="cont-adress"><strong>ThanksSST &trade;</strong><small></small><br />
                        @Model.Company.Address</li>
                    <li class="">QQ:@Model.Company.QQ</li>
                </ul>
            </div>
            <!-- /span6 -->
        </div>
        <!-- /inner -->
    </div>
    <!-- /span6 -->
    <div class="clearfix"></div>
</div>
<!-- /row  bg-main -->



<script>
    $(function () {
        $(".nav-collapse .nav li:eq(1)").addClass("active");
        $(".nav-collapse .nav li:eq(1)").siblings().removeClass("active");
        $("#comfooter").hide();
    })
</script>
