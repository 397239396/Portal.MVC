@model ThankNet.Models.Example

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .imgbox img {
        width: 150px;height: 140px;
    }
    .imgbox{text-align: center;}    
     .imgbox h6 a{color: gray}   
     small{margin-left: 10px;}

</style>

<!-- banner-->
<div class="banner">
</div>

<div class="row-fluid" style="background-color: white">
 <div class="breadcrumbline"></div>
    <div class="inner">
        <div class="alignleft span4 "><h2></h2><br /><img src="@Model.ImgUrl" /></div>        <div class="span7">
            <h3> @Model.ProjectName</h3> <br />            <div class="heading_border"></div>
            <p><small>更新时间：@Model.ModifyTime</small> </p>
            <p>
                @Html.Raw(Model.Description)
            </p>
            <p><small>合作公司:@Model.Name</small> <small>访问次数：@Model.VisitCount</small></p>
        </div>          
    </div>
</div>


    <div class="row-fluid" style="background-color: white">
         <div class="inner">
        <h3>其他案例</h3> <br />        <div class="heading_border"></div>
        <div class="carousel_box" style="position: relative;padding: 10px;padding-right: 20px;">
            @Html.Action("SlidCaseList")
        </div>
        </div>
       
    </div>   
<script>
    $(function() {
        $(".nav-collapse .nav li:eq(3)").addClass("active");
        $(".nav-collapse .nav li:eq(3)").siblings().removeClass("active");
        
        $('.carousel_box').flexslider({
            animation: "slide",
            controlNav: true,
            directionNav: false,
            slideshowSpeed: 10000

        });
    })
</script>