@model IEnumerable<ThankNet.Models.Example>

@{
  
    var i = 0;
}
<ul class="slides row-fluid">

    @foreach (var e in Model)
    {
        
        if ((i)%3 == 0)
        {
            @Html.Raw("<li>")
           
        }

        i++;
        <div class="span4 ">
            <a href="@Url.Action("Details","Example",new {id=e.Id})">
            <img src="@e.ImgUrl" style="width: 100% ;height: 220px;"  alt="案例" /></a>
            <h6 class="carousel_header">
                 <a href="@Url.Action("Details","Example",new {id=e.Id})">@e.ProjectName </a>
            </h6>
            <p>
                <i class="liststar"></i>
                <a class="locality" href="@Url.Action("Details","Example",new {id=e.Id})">@e.Name</a>
            </p>
        </div>
        
         if (i%3 == 0||i==Model.Count())
        {
            @Html.Raw("</li>")
        }
    }
</ul> 
